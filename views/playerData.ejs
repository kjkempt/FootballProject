                </div>
            </div>
            <!-- /.row -->
            <form class="form-group" action="/playerData/updateGraph" method="post">
                <label for="sel1">Select list:</label>
                <div class="form-group">
                    <select class="form-control" id="mySelect" name="username">
                        <option disabled selected value> -- select a player -- </option>
                        <% allPlayerData.forEach(function (user) { %>
                        <tr>
                            <option><%= user.username %></option>
                        </tr>
                        <% }) %>
                    </select>
                    <script>
                        var $ = jQuery;
                        $(document).ready(function () {
                            $("#mySelect").change(function () {
                                $.post("/playerData/updateGraph",
                                    {username: $('#mySelect :selected').text()},
                                        function(d) {
                                            $("#morris-area-chart").empty();
                                            buildPlayerGraph(d);
                                            $("#3_day_load_chart").empty();
                                            buildLoadGraph(d, 3, '3_day_load_chart');
                                            $("#7_day_load_chart").empty();
                                            buildLoadGraph(d, 7, '7_day_load_chart');
                                        }
                                );
                            });
                        });
                    </script>
                </div>
            </form>
            <div class="row">
                <div class="col-lg-12">
