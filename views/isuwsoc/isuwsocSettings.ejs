    <![endif]-->


    <!-- Datatables CSS and JS links  -->

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.css">




</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/isuwsocAdminHome">Admin Home</a>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%=username%><b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/isuwsocSettings"><i class="fa fa-fw fa-gear"></i> Settings</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse" >
            <ul class="nav navbar-nav side-nav" >
                <li>
                    <a href="/isuwsocCurrentData"><i class="glyphicon glyphicon-list-alt"></i> Current Data</a>
                </li>
                <li>
                    <a href="/isuwsocDailySummary"><i class="glyphicon glyphicon-list-alt"></i> Daily Summary</a>
                </li>
                <li>
                    <a href="/isuwsocWeeklySummary"><i class="glyphicon glyphicon-list-alt"></i> Weekly Summary</a>
                </li>
                <li>
                    <a href="/isuwsocCreateWorkout"><i class="glyphicon glyphicon-pencil"></i> Create Workout</a>
                </li>
                <li>
                    <a href="/isuwsocGroupControl"><i class="glyphicon glyphicon-th-list"></i> Group Control</a>
                </li>
                <li>
                    <a href="/isuwsocAddAthlete"><i class="glyphicon glyphicon-plus"></i> Add Member</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>
    <div id="page-wrapper">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">


                    <span class = "text-nowrap">
                                    <h1 class="page-header" >
                                        Administrator Settings
                                    </h1>
                                    </span>

                    <div class="panel panel-default">

                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Add Player Group</h3>
                        </div>
                        <div class = "panel-body">
                            <form name="adminAddGroup"  class = "form-inline" action="/isuwsocSettings/addGroup" method="post" role="form"
                                  style=" display: block;">
                                <label for="sel1">Create New Group:</label>
                                <div class="form-group">
                                    <input type="text" name="add_group" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                                <p class = "text-success" style="display: inline"><%= message_add %></p>
                            </form>


                        </div>



                    </div>


                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Delete Player Group</h3>
                        </div>
                        <div class = "panel-body">
                            <form name="adminDeleteGroup"  class = "form-inline" action="/isuwsocSettings/deletegroup" method="post" role="form"
                                  style=" display: block;">
                                <label for="sel1">Select group:</label>
                                <div class="form-group">
                                    <select class="form-control" id="mySelect" name="delete_group">
                                        <option disabled selected value> -- Select a group -- </option>
                                        <% for(var j = 0; j < groups.length; j++){  %>
                                        <tr>
                                            <option value = "<%= groups[j].dgroup %>" ><%= groups[j].dgroup %></option>
                                        </tr>
                                        <%} %>
                                    </select>

                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                                <p class = "text-success" style="display: inline"><%= message_delete %></p>

                            </form>

                        </div>
                    </div>


                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Player Double Workout Select</h3>
                        </div>
                        <div class = "panel-body">
                            <form name="adminDoubleSelect"  class = "form-inline" action="/isuwsocSettings/doubleSelect" method="post" role="form"
                                  style=" display: block;">
                                <div class="form-group">
                                    <label class="radio-inline"><input type="radio" name="switch" value="on">On</label>
                                    <label class="radio-inline"><input type="radio" name="switch" value="off">Off</label>
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>

                            </form>

                        </div>
                    </div>

                </div>


            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->

</div>
