    <div id="page-wrapper">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Team/Position Group Data</h3>
                        </div>
                        <div class = "panel-body">


                            <form name="dailySumForm"  class = "form-inline" action="/coachDailySummary/coachDailySum" method="post" role="form"
                                  style=" display: block;">


                                <!-- Dropdown arrow selecting most recent workouts (10)
                                 Shows the RPE scores of every player plus pre and post coach
                                 scores and have a tab on the side that allows notes to be
                                 put in on a player-->
                                <label for="sel1">Select workout date:</label>
                                <div class="form-group">
                                    <select class="form-control" id="mySelect" name="date_select">
                                        <option disabled selected value> -- select a workout -- </option>
                                        <% recent.forEach(function (rec) { %>
                                        <tr>
                                            <option value = "<%= rec.workoutid %>" ><%= rec.date %></option>
                                        </tr>
                                        <% }) %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </form>



                            <br>


                            <%if(note.length > 0)
                            {%>
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Notes</h3>
                                </div>
                                <div class = "panel-body">

                                    <p><%=note[0].notes%></p>

                                </div>
                            </div>
                            <%}%>





                            <br>



                            <table id="daily_sum" class="display">
                                <thead>
                                <tr>
                                    <td>Last Name</td>
                                    <td>First Name</td>
                                    <td>sRPE</td>
                                    <td>Duration (min.)</td>
                                    <td>Load</td>
                                    <td>Notes</td>
                                </tr>
                                </thead>
                                <tbody>

                                <% workout.forEach(function(player_daily){
                                    var load = note[0].duration * player_daily.player_sRPE;    %>

                                <tr>
                                    <td><%= player_daily.last_name%></td>
                                    <td><%= player_daily.first_name%></td>
                                    <td><%= player_daily.player_sRPE%></td>
                                    <td><%= note[0].duration%></td>
                                    <td><%= load%></td>

                                    <% if(!player_daily.pwnotes){%>
                                    <td> </td>
                                    <%}
                                    else{%>
                                    <td>
                                        <button type="button" class="btn btn-sm" data-toggle="popover" data-placement="left" style="background-color: transparent"
                                                title="Player Note"
                                                data-content="<%= player_daily.pwnotes%>">
                                            <span class="glyphicon glyphicon-exclamation-sign" style="color: red; font-size: x-large" aria-hidden="true"></span></button>
                                    </td>
                                    <%}%>



                                </tr>
                                <%})%>

                                <%if(note.length > 0)
                                {%>

                                <tr>
                                    <td>Coach</td>
                                    <td>Pre</td>
                                    <td><%= note[0].pre_sRPE%></td>
                                    <td><%= note[0].duration%></td>
                                    <td><%= (note[0].duration * note[0].pre_sRPE)%></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Coach</td>
                                    <td>Post</td>
                                    <td><%= note[0].sRPE%></td>
                                    <td><%= note[0].duration%></td>
                                    <td><%= (note[0].duration * note[0].pre_sRPE)%></td>
                                    <td></td>
                                </tr>


                                <%}%>

                                </tbody>
                            </table>

                            <script>
                                var $ = jQuery;
                                $(document).ready( function () {

                                     $('#daily_sum').DataTable({
                                         "columnDefs": [
                                             {"width": "15%", "targets": 3}
                                         ],
                                        drawCallback: function() {
                                            $('[data-toggle="popover"]').popover();
                                        }
                                    });


                                    });


                            </script>




